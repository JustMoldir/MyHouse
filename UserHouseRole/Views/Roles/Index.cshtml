@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityRole>
<h1>Роли</h1>
<br />
<form method="post" asp-action="addrole" asp-controller="roles">
    <div class="input-group">
        <input name="roleName" class="form-control w-25">
        <span class="input-group-btn">
            <button class="btn btn-info">Добавить новую роль</button>
        </span>
    </div>
</form>
<table class="table table-striped" id="roleTable">
    <thead>
        <tr>
            <th>
                Роль
            </th>
            <th>
                Id
            </th>

            <th style="width:10%">
                Действия
            </th>
        </tr>
    </thead>
    <tbody>

        @foreach (var role in Model)
        {
<tr>
    <td>
        @role.Name
    </td>
    <td>
        @role.Id
    </td>
    <td class="text-right">
        <div class="btn-group">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Действие
            </button>
            <div class="dropdown-menu shadow animated--grow-in">
                <a class="dropdown-item">
                    <i class="fas fa-pencil-alt"></i> Редактировать
                </a>
                <form class="d-inline">
                    <a class="dropdown-item"><i class="fas fa-trash-alt"></i> Удалить</a>
                </form>
                @if (role.Name != "SuperAdmin")
                {

            <a style='margin-right:16px' asp-controller="Permission" asp-action="Index" asp-route-roleId="@role.Id" class="dropdown-item">
                <i class="fas fa-wrench"></i> Управление разрешениями
            </a>}
            </div>
        </div>
    </td>
</tr>            }
    </tbody>
</table>