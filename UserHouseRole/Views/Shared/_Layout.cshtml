@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="en">
<title>MyHouse</title>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ImageUploadMVClast</title>
    <link rel="icon" type="image/x-icon" href="~/img/hommm.png">
    <link href="~/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/default.css" rel="stylesheet" />
    <link href="~/css/flexslider.css" rel="stylesheet" />
    <link href="~/css/popuo-box.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />
    <link href="~/css/styles.css" rel="stylesheet" />
    <a href="~/fonts/glyphicons-halflings-regular.eot"></a>
    <a href="~/fonts/glyphicons-halflings-regular.ttf"></a>
    <a href="~/fonts/glyphicons-halflings-regular.woff"></a>
    <a href="~/fonts/glyphicons-halflings-regular.woff2"></a>
    <a href="~/fonts/Montserrat-Regular.ttf"></a>
    <a href="~/fonts/Oxygen-Regular.ttf"></a>
    <script src="~/js/easyResponsiveTabs.js"></script>
    <script src="~/js/jquery.flexisel.js"></script>
    <script src="~/js/jquery.flexslider.js"></script>
    <script src="~/js/jquery.magnific-popup.js"></script>
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/scripts.js"></script>
    <script src="~/js/responsiveslides.min.js"></script>

</head>
<body>
    <!--header-->
    <div class="navigation">
        <div class="container-fluid">
            <nav class="pull">
                <ul>
                    <li><a asp-controller="WRentHouses" asp-action="Index">Главная</a></li>
                    <li><a asp-controller="WRentHouses" asp-action="About">О нас</a></li>
                    <li><a asp-controller="WRentHouses" asp-action="Blog">Блог</a></li>
                    <li><a asp-controller="WRentHouses" asp-action="Terms">Условия</a></li>
                    <li><a asp-controller="WRentHouses" asp-action="Privacy">Конфиденциальность</a></li>
                    <li><a asp-controller="WRentHouses" asp-action="Contact">Контакт</a></li>
                </ul>
            </nav>
        </div>
    </div>

    <div class="header">
        <div class="container">
            <!--logo-->
            <div class="logo">
                <h1><a href="index.html">MyHouse</a></h1>
            </div>
            <!--//logo-->
            <div class="top-nav">




                <ul class="right-icons">

                    @if (SignInManager.IsSignedIn(User))
                    {


                        <li><span><i class="glyphicon glyphicon-phone"> </i>+ 7 (727)-659-73-30</span></li>
                        <li><a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@User.Identity.Name</a></li>
                        <li>
                            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                <button type="submit" class="nav-link btn btn-link text-dark">Выйти</button>
                            </form>
                        </li>
                        <li><a class="play-icon popup-with-zoom-anim" href="#small-dialog"><i class="glyphicon glyphicon-search"> </i> </a></li>
                    }
                    else
                    {

                        <li><span><i class="glyphicon glyphicon-phone"> </i>+ 7 (727)-659-73-30</span></li>
                        <li><a asp-area="Identity" asp-page="/Account/Login"><i class="glyphicon glyphicon-user"> </i>Авторизация</a></li>
                        <li><a class="play-icon popup-with-zoom-anim" href="#small-dialog"><i class="glyphicon glyphicon-search"> </i> </a></li>
                    }


                    @*<li><span><i class="glyphicon glyphicon-phone"> </i>+ 7 (727)-659-73-30</span></li>
                    <li><a asp-area="Identity" asp-page="/Account/Login"><i class="glyphicon glyphicon-user"> </i>Авторизация</a></li>
                    <li><a class="play-icon popup-with-zoom-anim" href="#small-dialog"><i class="glyphicon glyphicon-search"> </i> </a></li>*@

                </ul>




                <div class="nav-icon">
                    <div class="hero fa-navicon fa-2x nav_slide_button" id="hero">
                        <a href="#"><i class="glyphicon glyphicon-menu-hamburger"></i> </a>
                    </div>
                    <!---
            <a href="#" class="right_bt" id="activator"><i class="glyphicon glyphicon-menu-hamburger"></i>  </a>
        --->
                </div>
                <div class="clearfix"> </div>
                <!---pop-up-box---->

                <link href="~/css/popuo-box.css" rel="stylesheet" type="text/css" media="all" />
                <script src="~/js/jquery.magnific-popup.js" type="text/javascript"></script>
                <!---//pop-up-box---->
                <div id="small-dialog" class="mfp-hide">
                    <!----- tabs-box ---->
                    <div class="sap_tabs">
                        <div id="horizontalTab" style="display: block; width: 100%; margin: 0px;">
                            <ul class="resp-tabs-list">
                                <li class="resp-tab-item " aria-controls="tab_item-0" role="tab"><span>Все дома</span></li>
                                <li class="resp-tab-item" aria-controls="tab_item-1" role="tab"><span>Продается</span></li>
                                <li class="resp-tab-item" aria-controls="tab_item-2" role="tab"><span>Аренда</span></li>
                                <div class="clearfix"></div>
                            </ul>
                            <div class="resp-tabs-container">
                                <h2 class="resp-accordion resp-tab-active" role="tab" aria-controls="tab_item-0"><span class="resp-arrow"></span>Все дома</h2><div class="tab-1 resp-tab-content resp-tab-content-active" aria-labelledby="tab_item-0" style="display:block">
                                    <div class="facts">
                                        <div class="login">
                                            <form method="get" asp-action="index">
                                                <p>
                                                    <input type="search" value="Поиск" name="Salesearch" style="width:500px;" />
                                                    <input type="submit" value="" />

                                                </p>

                                            </form>
                                        </div>
                                    </div>
                                </div>
                                <h2 class="resp-accordion" role="tab" aria-controls="tab_item-1"><span class="resp-arrow"></span>Продается</h2><div class="tab-1 resp-tab-content" aria-labelledby="tab_item-1">
                                    <div class="facts">
                                        <div class="login">
                                            <form method="get" asp-action="Index">
                                                <p>
                                                    <input type="search" placeholder="Поиск" name="Salesearch" style="width:500px;" />
                                                    <input type="submit" value="" />

                                                </p>

                                            </form>
                                        </div>
                                    </div>
                                </div>

                                <h2 class="resp-accordion" role="tab" aria-controls="tab_item-2"><span class="resp-arrow"></span>Аренда</h2><div class="tab-1 resp-tab-content" aria-labelledby="tab_item-2">
                                    <div class="facts">
                                        <div class="login">
                                             <form method="get" asp-action="Index">
                                                <p>
                                                    <input type="search" placeholder="Поиск"  name="Rentsearch" style="width:500px;" />
                                                    <input type="submit" value=""/>
                                                    
                                                </p>

                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <script src="~/js/easyResponsiveTabs.js" type="text/javascript"></script>
                        <script type="text/javascript">
                            $(document).ready(function () {
                                $('#horizontalTab').easyResponsiveTabs({
                                    type: 'default', //Types: default, vertical, accordion
                                    width: 'auto', //auto or any width like 600px
                                    fit: true   // 100% fit in a container
                                });
                            });
                        </script>
                    </div>
                </div>
                <script>
                    $(document).ready(function () {
                        $('.popup-with-zoom-anim').magnificPopup({
                            type: 'inline',
                            fixedContentPos: false,
                            fixedBgPos: true,
                            overflowY: 'auto',
                            closeBtnInside: true,
                            preloader: false,
                            midClick: true,
                            removalDelay: 300,
                            mainClass: 'my-mfp-zoom-in'
                        });

                    });
                </script>


            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
    <!--//-->
    <!--//header-->

    <div>
        @RenderBody()

    </div>

    <!--footer-->
    <div class="footer">
        <div class="container">
            <div class="footer-top-at">
                <div class="col-md-3 amet-sed">
                    <h4>Наша компания</h4>
                    <ul class="nav-bottom">
                        <li><a href="about.html">О нас</a></li>
                        <li><a href="terms.html">положения и условия</a></li>
                        <li><a href="privacy.html">Политика конфиденциальности</a></li>
                        <li><a asp-controller="wrenthouse" asp-action="blog">Блог</a></li>

                    </ul>
                </div>
                <div class="col-md-3 amet-sed ">
                    <h4>Работайте с нами</h4>
                    <ul class="nav-bottom">
                        <li><a href="single.html">Партнерские программы</a></li>
                        <li><a href="contact.html">Карта сайта</a></li>
                        <li><a href="career.html">Карьера</a></li>
                        <li><a asp-controller="wrenthouses" asp-action="contact">Обратная связь</a></li>
                    </ul>
                </div>
                <div class="col-md-3 amet-sed">
                    <h4>Служба поддержки</h4>
                    <p>пн-пт, 7AM-7PM </p>
                    <p>сб-вс, 8AM-5PM </p>
                    <p>+7 (727) 555-87-87</p>
                    <ul class="nav-bottom">
                        <li><a href="#">Живой чат</a></li>
                        <li><a href="faqs.html">Часто задаваемые вопросы</a></li>
                        <li><a href="suggestion.html">Внести предложение</a></li>
                    </ul>
                </div>
                <div class="col-md-3 amet-sed ">
                    <h4>Услуги по недвижимости</h4>
                    <ul class="nav-bottom">
                        <li><a asp-controller="salehouses" asp-action="index">Жилая недвижимость</a></li>
                        <li><a asp-area="Identity" asp-page="/Account/Login">Авторизация</a></li>
                        <li><a asp-area="Identity" asp-page="/Account/Register">Регистрация</a></li>
                    </ul>
                    <ul class="social">
                        <li><a href="#"><i> </i></a></li>
                        <li><a href="#"><i class="gmail"> </i></a></li>
                        <li><a href="#"><i class="twitter"> </i></a></li>
                        <li><a href="#"><i class="camera"> </i></a></li>
                        <li><a href="#"><i class="dribble"> </i></a></li>
                    </ul>
                </div>
                <div class="clearfix"> </div>
            </div>
        </div>
        <div class="footer-bottom">
            <div class="container">
                <div class="col-md-4 footer-logo">
                    <h2><a href="index.html">MyHouse</a></h2>
                </div>
                <div class="col-md-8 footer-class">
                    <div class="clearfix"> </div>
                    <p>© 2022 MyHouse. Все права защищены |</a> </p>
                </div>
                <div class="clearfix"> </div>
            </div>
        </div>
    </div>
    <!--//footer-->
</body>
</html>

















